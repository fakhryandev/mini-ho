<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head'); %>
  </head>

  <body class="vh-100">
    <header>
      <header><%- include('../..//partials/header'); %></header>
    </header>
    <div class="container">
      <div class="my-4">
        <form id="partForm">
          <div class="mb-3">
            <label for="partInput" class="form-label">File Part</label>
            <input
              class="form-control form-control-sm"
              id="partInput"
              type="file"
            />
          </div>
          <button class="btn btn-primary" type="submit" id="uploadFile">
            Unggah File
          </button>
        </form>
        <div class="d-flex justify-content-end">
          <button class="btn btn-danger mt-3" type="button" id="resetPart">
            Kosongkan Master Part
          </button>
        </div>
      </div>
      <div class="mt-4" id="grid"></div>
    </div>
    <div id="loadingOverlay" class="loading-overlay">
      <div class="spinner"></div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/gridjs/dist/gridjs.umd.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="./javascripts/part.js"></script>
  </body>
</html>
