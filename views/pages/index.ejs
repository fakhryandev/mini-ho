<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="vh-100">
    <header><%- include('../partials/header'); %></header>
    <div class="container">
      <div class="row">
        <div class="col-12 col-md-8 col-lg-5">
          <div class="card mt-4">
            <div class="card-body">
              <form>
                <div class="mb-3 row">
                  <label class="col-sm-3 col-form-label">Tanggal Awal</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="tanggalAwal" />
                  </div>
                </div>
                <div class="mb-3 row">
                  <label class="col-sm-3 col-form-label">Tanggal Akhir</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="tanggalAkhir" />
                  </div>
                </div>
                <div class="text-end">
                  <button type="button" id="search" class="btn btn-primary">
                    Cari
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-between my-4">
        <button type="button" class="btn btn-primary" id="add">
          Tambah Data
        </button>
        <div class="d-flex justify-content-end gap-3">
          <button type="button" class="btn btn-primary btn-sm" id="report">
            Generate Report
          </button>
          <button type="button" class="btn btn-primary btn-sm" id="ax">
            Generate AX
          </button>
        </div>
      </div>
      <div class="mt-4" id="grid"></div>
    </div>
    <div id="loadingOverlay" class="loading-overlay">
      <div class="spinner"></div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/gridjs/dist/gridjs.umd.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="/javascripts/index.js"></script>
  </body>
</html>
